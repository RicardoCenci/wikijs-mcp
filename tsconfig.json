
{
	"compilerOptions": {
	  "target": "es2024",
	  "module": "es2022",
	  "moduleResolution": "bundler",
	  "esModuleInterop": true,
	  "strict": true,
	  "outDir": "build",
	  "declaration": true,
	  "sourceMap": true,
	  "rootDir": "src",
	  "forceConsistentCasingInFileNames": true,
	  "skipLibCheck": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build",]
  }
  